.m-blogPost
  background white
  box-shadow 2px 3px 7px rgba(0, 0, 0, 0.2)
  min-height 360px

  .main-link
    text-decoration none

  .m-blogPost__imageWrap
    .m-blogPost__image
      width 100%
      height auto
      max-height 250px

  .m-blogPost__textContainer
    padding 10px 20px
    .m-blogPost__mainText
      font-size 16px
      text-align left
      color black
      font-weight lighter
      min-height 60px

    .m-blogPost__mainButton
      border none
      background none
      color #e94095
      padding 10px 0

      .mainButton__link
        text-decoration none
        position relative

        &:after
          content 'â†’'
          display inline-block
          margin 0 auto
          width 13px
          text-indent -9999px
          background-image url(/static/landingpage/img/blog/icon-arrow.png)
          background-size 13px 10px
          opacity 0
          position: absolute
          transition all .3s ease-in-out
          background-position center
          background-repeat no-repeat
          bottom -2px

        &.hover:after
          transform translateX(15px)
          opacity 1

@media screen and (max-width: max-mobile-screen)
  .m-blogPost
    .m-blogPost__textContainer
      padding 10px 20px
      .m-blogPost__mainText
        text-align center
