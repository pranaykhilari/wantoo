lesscss-percentage(n)
  (n * 100)%
.m-funnelQuote
  padding 30px 0 0 0
  width 100%
  .m-funnelQuote__quote
    color brown
    font-weight 100
    line-height 1.6em
    margin auto
    max-width 1065px
    text-align center
  .m-funnelQuote__authorContainer
    @extend .clearfix
    margin 30px auto
    max-width 430px
    padding-bottom 1.1%
    .m-funnelQuote__imageContainer
      float left
      width 19.7%
      padding-bottom 22%
      position relative
      padding-top 1%
      .m-funnelQuote__image
        width 100%
        height auto
    .m-funnelQuote__textContainer
      float left
      margin-left 3%
      text-align left
      position relative
      padding-top 6.5%
      .m-funnelQuote__author
        color brown
        font-weight 600
        font-size 16px
        margin 0
        max-width 853px
      .m-funnelQuote__authorTitle
        margin 0
        font-weight 100
        font-size 14px

@media screen and (max-width: max-mobile-screen)
  .m-funnelQuote
    padding 60px 0
    margin 0 auto
    width 90%
    .m-funnelQuote__authorContainer
      padding 0
      margin 0
      max-width 100%
      .m-funnelQuote__imageContainer
        text-align center
        margin 0 auto
        float none
      .m-funnelQuote__textContainer
        margin 0 auto
        float none
        text-align center

