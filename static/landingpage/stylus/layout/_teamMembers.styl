.l-teamMembers
	@extend .clearfix
	width 100%
	
	.l-teamMembers__col
		float left
		width 46%
		margin-left 8%
		
		&:first-child
			margin-left 0

@media screen and (max-width: 700px)
	.l-teamMembers
		width 100%
		max-width 300px
		margin 0 auto
		
		.l-teamMembers__col
			width 100%
			margin 0 0 60px 