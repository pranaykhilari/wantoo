.view-manageCategories
	background #fff
	padding-top 50px
	
	.-no-ideas-message
		text-align center
		margin 0 auto
		font-size 18px
		color #a7a7a7
		font-style italic
		margin-top 30px
	
	.-btn-add
		display block
		position absolute
		top 85px
		right 0
		color #fff
	
	.dataTables_filter
		display none
		

@media (max-width: 650px)
	.view-manageCategories .-btn-add
		position relative
		top 0
		margin-top -25px
		margin-bottom 20px
		float left