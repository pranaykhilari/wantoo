			zoom 0.5

@media screen and (max-width: 480px)
	.view-stats
		.chartToggle
			zoom 0.45
			padding-top: 60px;
		.cont-donuts
			zoom 0.45
		#chart_div
			zoom 0.45
		.cont-donutLabels	
			bottom -60px
		.toggle-button-cont
			.-btn-chart-toggle
				font-size 12px

					