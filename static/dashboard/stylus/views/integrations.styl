.view-integration
	padding-top 50px

	.integrations__body
		font-size 16px
		margin 20px 0

	.integrations__content_wrapper
		padding-top 40px

		.integrations__content_inner
			.twitter-search
				background-image url("/static/dashboard/img/icons/b_twitter_small.png")
				background-position 0 5px
				background-repeat no-repeat
				background-size 25px
				.twitter-search__header
					font-size 18px
					font-weight 600
					margin-left 30px
					padding 8px 0

				.twitter-search__searchbar
					width 100%
					border-radius 0px
					min-height 45px
					border 1px solid #e1e1e1

					.twitter-search__input
						display none

					.twitter-search__text-enter
						height 45px
						outline none
						border none
						border-radius 0px
						margin-left 8px
						float left

					.keyword__wrapper
						background pink

					.keyword
						float left
						display inline-block
						line-height 45px
						vertical-align baseline
						margin-left 8px

						.keyword-wrap
							padding 10px 15px
							border-radius 3px
							color white

						.key-close
							padding-right 15px
							color white

							&:hover 
								cursor pointer
								font-weight bold


			.twitter-list
				padding-top 60px
				.twitter-list__inner
					width 100%

					.twitter-list__item
						padding 32px 0
						width 100%

						.tweet__link-wrap
							.tweet__header
								float left

								.tweet_user-image
									width 24px
									border-radius 50%
								.tweet_user-name
									padding 0 10px
								.tweet__user-handle
									color grey

							&:after 
								clear both

						.tweet__content-source
							padding 5px 0


