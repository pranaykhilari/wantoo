/*** Login ***/
.view-login
	min-height 100%
	min-height 100vh
	display flex
	align-items center
	margin 0 auto
	width 90% !important
	
	.-inner-cont
		max-width: 364px
		margin: 80px auto 0 auto
		width 100%
		
		.-welcome
			text-align center
			color #959595
			font-size 40px
		
		.-intro
			text-align center
			font-size 18px	
		
		.-title
			text-align center	
			width 100%
			margin 0 0 20px
		
		.-logo
			width 100%
			max-width 180px
			margin 0 auto
			display block
			
			img
				width 100%
				margin-bottom 60px
		.-closed_boards
			width 100%
			max-width 180px
			margin 0 auto
			display block

			img
				width 100%
	.closed_board_button
		color #fff
		min-width 140px
		padding 0 27px
		height 60px
		background #e94095
		font-size 18px
		font-weight 600
		display block
		text-decoration none!important
		text-align center
		line-height 60px
		border none
		outline none
		position relative
		left 18.5%
	.-closed_boards_notice
		position relative
		left 14%
		float left
		font-weight 600
		font-size 29px
		padding-bottom 22%
	.closed_board_help
		position relative
		float left
		left 28%
		padding-top 55%
		color gainsboro
	.-main-title
		font-size 25px
		width 100%
		text-align center
		font-weight 200
		line-height 35px
	.close_board_signup
		text-decoration none
		color white
	.close_board_color
		color #E94095

	.-sub-title
		color #909090
		font-size 18px
		text-align center
		font-weight 200
		margin 0 auto
		max-width 350px
		width 100%

		a
			color #07a0f8

	.-title
		font-size 25px
		color #909090
		text-align center
		font-weight 200
		margin-bottom 60px

	.-loginFormCont
		position relative
		width 100%

		.-logo
			display block
			max-width 160px
			margin 0 auto 20px auto

		.-text-link
			color #07a0f8
			text-align center
			position absolute
			right 0
			bottom 70px
			font-size 12px
			font-weight normal

		.-signup
			color #07a0f8
			display block
			width 100%
			font-size 25px
			text-align center
			font-weight 200

		.-btn-submit
			margin-top -10px
			margin-bottom 60px
			width 150px

	.-signup
		text-align center
		width 100%
		color #949494

	.-privacy-cont
		text-align center
		margin-top 80px

		.-copy
			color #ccc
			font-size 12px

		a
			color #07a0f8

	.-terms-cont
		text-align center
		margin-top 80px

		.-copy
			color #ccc
			font-size 12px

		a
			color #07a0f8
			font-size 12px


@media only screen and (max-width : 480px)
	.view-login
		.-loginFormCont
			.-text-link
				bottom 50px

@media only screen and (max-width : 359px)
	.view-login
		.-closed_boards_notice
			left 5%
		.closed_board_button
			left 11.5%
		.closed_board_help
			left 22%
