.view
	position relative
	clearfix()
	width 100%
	min-height 100%
	padding-bottom 100px
	
	&.x-white
		background #fff
		padding-top 50px
	
	.-title
		color #000
		margin 0 0 25px 0
		font-size 30px

	.-view__settings-menu
		width 100%
		margin-bottom 55px
		
		.-inner-cont
			margin-top 40px
			
			a
				display inline
				font-size 18px
				margin-right 64px
				color #000
				text-decoration none
				
				&:last-child
					margin-right 0
				
				&:hover
					opacity .8	
				
				&.active
					color highlightPrimary
					font-weight bold
					border-bottom 2px solid highlightPrimary
					padding-bottom 2px

	
	.-breadcrumb
		background-image url('/static/dashboard/img/icons/back_arrow.svg')
		background-size 18px
		background-repeat no-repeat
		background-position 0 2px
		padding-left 30px
		color #999999
		font-size 14px
		font-weight bold
		margin-bottom 30px
		
		&:hover
			text-decoration none
			
	.-breadcrumb-cont
		width 100%
		float left		