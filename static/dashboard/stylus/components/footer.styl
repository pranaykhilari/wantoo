.l-footer
  background-color #fff
  margin 60px 0 30px 0
  overflow hidden
  .l-footer__inner
    clear both
    margin 0 auto
    max-width 1065px
    padding 0 3%
    width 94%
  .l-footer__contact
    width 100%
    text-align center
    .l-footer__logo
      display block
      width 98px
      img
        width 100%
    .l-footer__email
      font-size 12px
      a
        color #000
        text-decoration none
        &:hover
          text-decoration underline
    .l-footer__privacy
      margin -10px 0  0 0
      color lightgrey
      font-size 12px
      a
        color lightgrey
  .l-footer__menu
    width 100%
  .l-footer__item
    display inline-block
  .l-footer__social
    list-style none
    margin 20px 0
    padding 0
    width 100%
  .l-footer__socialIcon
    display inline-block
    width 25px
    img
      width 100%
@media screen and (max-width: max-mobile-screen)
  .l-footer
    .l-footer__contact, .l-footer__menu, .l-footer__menuLast
      width 100%
      text-align center
    .l-footer__contact
      .l-footer__logo
        display block
        margin 0 auto
      .l-footer__social
        float none
        margin 10px auto 0
        width 105px
      .l-footer__email
        margin-top 50px
