.dataTables_wrapper
		.dataTables_paginate
			.paginate_button
			&.hover
				background none !important
				border none !important

.dataTables_wrapper
		.row
			.col-sm-6:first-child
				display none;
			.col-sm-5
				display none;


		.dataTables_length
			display none

		.dataTables_filter
			float left
			margin-left 18px
			color white
			margin-top 30px

			input
				height 20px
				width 250px
				float left
				margin-left 0

.dataTables_wrapper
	max-width 100%
	top 90px
	margin 0 auto


	.dataTables_info
		margin-left 30px
		margin-top 30px
		font-family primaryFont
		font-size 12px
		color #959595
		display none

	.dataTables_paginate
		float: left
		position: relative;

	.pagination
		.paginate_button
			background: none!important;
			border: none!important;
			margin: 0;
			padding 0;
			a
				border 1px solid highlightPrimary
			&.previous
				a
					position: relative;
					margin-left: 0;
					border-top-left-radius: 4px;
					border-bottom-left-radius: 4px;
					border-color: #672CBF;
					border: 1px solid;
			&.next
				a
					position: relative;
					margin-left: 0;
					border-top-left-radius: 0;
					border-bottom-left-radius: 0
					border-color: #672CBF;
					border: 1px solid;

			&.active
				a
					background: none
