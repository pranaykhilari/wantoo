.checkbox_style
	position relative
	padding-top 8px
	left 68px

	p
		margin: 1.5em 0
		padding: 0
	label
		cursor: pointer
		color: black
		font-weight: normal
	input[type="checkbox"] + label:before
		border: 1px solid #7f83a2
		content: "\00a0"
		display: inline-block
		font: 16px/1em sans-serif
		height: 16px
		margin: 0 .25em 0 0
		padding: 0
		vertical-align: top
		width: 16px
	input[type="checkbox"]:checked + label:before
		color: white;
		content: "\2713";
		text-align: center;
	input[type="checkbox"]:checked + label:after
		font-weight: bold;
	input[type="checkbox"]
		display: none;

