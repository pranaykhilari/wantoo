.comp-manageTable
	thead
		tr
			th
				color #959595
				font-size 16px
				border-bottom 1px solid #f1f1f1

				.-label
					padding-right 20px

				&.no-sort
					background-image none

				&.sorting
					background-image none

				&.sorting_asc
					background-image none
					.-label
						//background-image url('/static/dashboard/img/icons/arrow-up.png')
						background-size 10px
						background-repeat no-repeat
						background-position 100% center

				&.sorting_desc
					background-image none
					.-label
						//background-image url('/static/dashboard/img/icons/arrow-down.png')
						background-size 10px
						background-repeat no-repeat
						background-position 100% center

				input[type="checkbox"]
					font-size 35px

	tbody
		.-btn-edit
			background-image url('/static/dashboard/img/icons/edit.svg')
			background-repeat no-repeat
			display block
			width 18px
			height 18px
			background-size 100%
			float right
			margin-right 11%

		tr
			height 109px

			td

				border-top 0 solid #dddddd
				border-bottom 1px solid #f1f1f1
				color #000
				vertical-align middle
				font-size 14px
				padding-left 18px
				padding-top 16px

				input[type="checkbox"]
					font-size 35px
					float left

				&.-italic
					font-style italic

				&.-bold
					font-weight bold

				&.-idea-author
					a
						color #000
						text-decoration none

				&.-idea-title
					a
						color #000
						text-decoration none

					&.new
						.-flag
							background #eb212e
							color #fff
							border-radius 3px
							margin-right 10px
							text-transform uppercase
							font-weight bold
							padding 2px 3px

				&.-member-name
					img
						margin-right 10px

				&.-member-action
					a
						text-decoration none
						//text-transform uppercase
						color highlightPrimary
						//font-weight bold
						font-size 14px

						&:hover
							opacity .8




