@import '~dashboard/stylus/base/colors.styl';

.comp-ideaList
	clearfix()
	width 100%
	
	&.is-empty
		&.comp-ideaList--liveSearch
			.comp-ideaList__noResults
				display block
	
	&.is-empty
		.comp-ideaList__noResults
			display block			
	
	&.comp-ideaList--liveSearch
		.comp-ideaList__searchInfo
			display block
			
	&.comp-ideaList--ideaInputLiveSearch
		.comp-ideaList__blurb
			display block
		
		.comp-ideaList__searchInfo
			display none	
	
	.comp-ideaList__searchTerm
		font-weight 600

	.comp-ideaList__blurb
		color #b0afaf
		font-size 16px
		font-weight 600
		display none
		
	.comp-ideaList__searchInfo
		display none	
		font-size 20px
		font-weight normal
		text-transform uppercase
		margin 0 0 36px
		
	.comp-ideaList__noResults
		//color #b0afaf
		color black
		display none
		//font-size 16px	
		font-size 22px	


	.noResults__list
		list-style none
		padding 0px

		.noResults__item
			padding-top 20px
	
	
	&.isHidden
		display none

	.-no-ideas-message
		text-align center
		margin 0 auto
		font-size 18px
		color #a7a7a7
		font-style italic
		margin-top 30px
	
	.-idea
		background #fff
		position relative	
		width 100%
		text-decoration none
		float left
		display flex
		align-items center
		padding 11px 0
		margin 0
		min-height auto
		
		&:first-child
			padding-top 0
			margin-top -10px
		
		.-status-badge
			color #fff
			border-radius 10px
			padding: 0 12px
			font-size 8px
			text-transform uppercase
			line-height 19px
			display inline-block
				
		&:last-child
			border none
		
		.-col-vote
			height 60px
			margin-top 6px

		.-col-vote, .-col-vote-small
			margin-right 5.5%
			float left
			
			.-cont-vote
				height 100px
				margin-top 0
				
				&.voted
					.-btn-vote
						border 2px solid highlightPrimary 
						background transparent
						color highlightPrimary
				
				&.not_voted
					.-btn-vote
						border 2px solid #959595
						background transparent
						color #959595
						
						&:hover		
							background highlightPrimary
							border-color highlightPrimary
							color #fff
			
				.-score
					color #000
					margin 0
					font-size 22px
					font-weight bold
					text-align center
					width 100%
					margin-bottom 3px
				
				.-btn-vote
					width 55px
					outline none
					font-size 16px
					font-weight normal
					margin 0 auto
					display block
					height 25px
					padding 0
					line-height 19px

			
		.-col-vote-small
			display none	
			
			.-cont-vote
				.-score
					text-align left		
					margin-left 35px
					font-size 14px
					font-weight normal
					color #a3a3a3
					margin-top 12px
					margin-bottom 15px
					
				.btn-vote
					width 100%
					height 60px		
				
		
		.-col-info
			float left
			padding 6px	
	
			.-cont-info
				min-height 50px
				
				a
					&:focus
						text-decoration none
						
					&:hover
						text-decoration none
						
						.-comments
							color highlightPrimary
				
				.-title
					color black
					font-size 20px
					margin 0 0 5px 0
					font-weight bold
					cursor pointer
					text-decoration none
					display block
					max-width 100%
					
					&::first-letter
						text-transform uppercase
					
					&:hover
						color highlightPrimary

				.-activity
					color #a3a3a3
					font-size 13px	
					margin 0
					
					.-category
						background-size 16px
						background-image url('/static/dashboard/img/icons/category.svg')
						background-position 0 center
						background-repeat no-repeat
						padding-left 25px
						color #a3a3a3
						text-decoration none
						margin-right 15px
						
						&:hover
							color highlightPrimary
					
					.-comments
						color #a3a3a3
						background-size 16px
						//background-image url('/static/dashboard/img/icons/comment.png')
						//background-position 0 center
						//background-repeat no-repeat
						margin-right 20px
						margin-left: -10px;
						//padding-left 15px
					
					.-recent
						background-size 16px
						margin-right 15px

						.-profile-link
							color #a3a3a3
							text-decoration none
							
							&:hover
								color highlightPrimary

						.-profile-pic
							border 1px solid #a7a7a7
							border-radius 50%
							width 22px
							margin-right 7px


						.-profile-left
							margin-left -15px


						
@media (max-width: 650px)
	.comp-ideaList
		.comp-ideaList__searchInfo, comp-ideaList__searchTerm
			font-size 15px
			
		.-idea
			align-items flex-start
			.-col-vote
				min-width 50px
				
				.-cont-vote
					.-score
						font-size 18px
						
					.-btn-vote
						font-size 14px
						font-weight 600
						width 50px
					
			.-col-info
				.-cont-info
					.-title
						font-size 15px

					.-activity
						.-recent span:first-child > span, .-category
							display none

						.-recent
							.-profile-pic
								width 18px
			
  	