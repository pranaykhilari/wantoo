.btn-border
	border 3px solid grey
	max-width 216px
	font-size 20px
	color grey
	display block
	text-align center
	padding 13px 0 11px
	text-decoration none
	font-weight bold
	
	&:hover
		color grey
		text-decoration none
		opacity .8
		
		span
			font-weight bold
	
.btn-vote
	width 93px
	outline none
	font-size 20px
	margin 0 auto
	display block
	padding 0
	width 55px
	
		
	&.voted
		border 2px solid highlightPrimary 
		background transparent
		color highlightPrimary
		
	
	&.not_voted
		border 2px solid #959595
		background transparent
		color #959595	
		
		&:hover
			border-color highlightPrimary 
			color highlightPrimary
		
.btn-fill
	width 140px
	height 60px
	background highlightPrimary
	border none
	font-size 18px
	font-weight bold
	color #fff
		
	&:disabled
		background #a7a7a7	

.btn-fill-transparent
	color #000
	min-width 140px
	height 60px
	background transparent
	font-size 18px
	font-weight bold
	display block
	text-decoration none !important
	text-align center
	line-height 60px 	
	border none
	padding 0	
	outline none

a.btn-fill-transparent
	&:active, &:focus, &:hover
		color #000	
	
